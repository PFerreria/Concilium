{
    "name": "concilium-desktop",
    "version": "1.0.0",
    "description": "Concilium AI Assistant - Desktop Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux",
        "pack": "electron-builder --dir"
    },
    "keywords": [
        "concilium",
        "ai",
        "workflow",
        "automation"
    ],
    "author": "Concilium Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "axios": "^1.6.2"
    },
    "build": {
        "appId": "com.concilium.desktop",
        "productName": "Concilium",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "assets/**/*"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "assets/icon.icns",
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png",
            "category": "Office"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}